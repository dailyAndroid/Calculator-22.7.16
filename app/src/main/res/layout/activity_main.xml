<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hwhong.calculator.MainActivity">

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/seven"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/eight"
        android:layout_alignTop="@+id/seven"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/nine"
        android:textSize="40dp"
        android:textStyle="normal|italic"
        android:layout_above="@+id/six"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/four"
        android:layout_alignTop="@+id/five"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/five"
        android:layout_below="@+id/eight"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/one"
        android:layout_alignTop="@+id/two"
        android:layout_alignLeft="@+id/four"
        android:layout_alignStart="@+id/four"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/two"
        android:layout_below="@+id/five"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/three"
        android:textSize="40dp"
        android:textStyle="normal|italic"
        android:layout_alignTop="@+id/two"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/add"
        android:layout_toEndOf="@+id/add"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/multiply"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/minus"
        android:layout_toEndOf="@+id/minus"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divide"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/multiply"
        android:layout_toEndOf="@+id/multiply"
        android:textSize="40dp"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/equals"
        android:textSize="40dp"
        android:textStyle="normal|italic"
        android:layout_above="@+id/multiply"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/clear"
        android:layout_alignRight="@+id/two"
        android:layout_alignEnd="@+id/two"
        android:textSize="40dp"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/equals" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_above="@+id/eight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/zero"
        android:layout_alignBottom="@+id/clear"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one"
        android:textSize="40dp" />

</RelativeLayout>
